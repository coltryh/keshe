<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.enterprise.dao.OperationLogMapper">

    <resultMap id="OperationLogResultMap" type="com.enterprise.entity.OperationLog">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="operation" column="operation"/>
        <result property="method" column="method"/>
        <result property="params" column="params"/>
        <result property="ip" column="ip"/>
        <result property="executeTime" column="execute_time"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insert" parameterType="com.enterprise.entity.OperationLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_operation_log (username, operation, method, params, ip, execute_time, create_time)
        VALUES (#{username}, #{operation}, #{method}, #{params}, #{ip}, #{executeTime}, #{createTime})
    </insert>

    <select id="findAll" resultMap="OperationLogResultMap">
        SELECT * FROM t_operation_log
        ORDER BY create_time DESC
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

    <select id="findByUsername" resultMap="OperationLogResultMap">
        SELECT * FROM t_operation_log
        WHERE username = #{username}
        ORDER BY create_time DESC
    </select>

</mapper>
